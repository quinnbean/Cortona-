{
  "name": "cortona",
  "productName": "Cortona",
  "version": "1.0.0",
  "description": "Jarvis Voice Assistant - Your AI-powered voice companion",
  "main": "main.js",
  "author": "Quinn Bean",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "dev": "NODE_ENV=development electron .",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:mac:arm64": "electron-builder --mac --arm64",
    "build:mac:x64": "electron-builder --mac --x64",
    "dist": "electron-builder --mac --publish never"
  },
  "build": {
    "appId": "com.cortona.jarvis",
    "productName": "Cortona",
    "copyright": "Copyright Â© 2025 Quinn Bean",
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "assets/icon.icns",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "arm64",
            "x64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "arm64",
            "x64"
          ]
        }
      ],
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "entitlements.mac.plist",
      "entitlementsInherit": "entitlements.mac.plist",
      "extendInfo": {
        "NSMicrophoneUsageDescription": "Cortona needs microphone access for voice commands and dictation.",
        "NSSpeechRecognitionUsageDescription": "Cortona uses speech recognition to understand your voice commands."
      }
    },
    "dmg": {
      "title": "Cortona",
      "icon": "assets/icon.icns",
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "files": [
      "**/*",
      "!*.md"
    ],
    "asarUnpack": [
      "node_modules/@picovoice/**",
      "node_modules/naudiodon/**"
    ],
    "directories": {
      "output": "dist"
    }
  },
  "dependencies": {
    "@picovoice/leopard-node": "^3.0.0",
    "@picovoice/porcupine-node": "^3.0.0",
    "auto-launch": "^5.0.6",
    "chokidar": "^3.5.3",
    "electron-store": "^8.1.0",
    "naudiodon": "^2.3.4",
    "node-record-lpcm16": "^1.0.1"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  }
}
